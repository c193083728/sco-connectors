<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <parent>
        <groupId>com.github.sco1237896</groupId>
        <artifactId>connectors-catalog-saas</artifactId>
        <version>999-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>connector-jira</artifactId>

    <name>Jira</name>
    <description>Jira</description>

    <packaging>jar</packaging>

    <properties>
        <connector.type>jira</connector.type>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.github.sco1237896</groupId>
            <artifactId>connectors-kamelets-jira</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.sco1237896</groupId>
                <artifactId>connectors-maven-plugin</artifactId>
                <configuration>
                    <connectors>
                        <connector>
                            <name>${connector.type}-source-${connector.version}</name>
                            <title>${project.name} source</title>
                            <description>Receive notifications about new issues from Jira.</description>
                            <adapter>
                                <prefix>jira</prefix>
                                <name>connector-${connector.type}-source</name>
                                <version>${connector.kamelets.version}</version>
                            </adapter>
                            <kafka>
                                <prefix>kafka</prefix>
                                <name>connector-kafka-sink</name>
                                <version>${connector.kamelets.version}</version>
                            </kafka>
                        </connector>
                        <connector>
                            <name>${connector.type}-add-comment-sink-${connector.version}</name>
                            <title>${project.name} Add Comment sink</title>
                            <description>Add a new comment to an existing issue in Jira.</description>
                            <adapter>
                                <prefix>jira</prefix>
                                <name>connector-${connector.type}-add-comment-sink</name>
                                <version>${connector.kamelets.version}</version>
                            </adapter>
                            <kafka>
                                <prefix>kafka</prefix>
                                <name>connector-kafka-source</name>
                                <version>${connector.kamelets.version}</version>
                            </kafka>
                        </connector>
                        <connector>
                            <name>${connector.type}-add-issue-sink-${connector.version}</name>
                            <title>${project.name} Add Issue sink</title>
                            <description>Add a new issue to Jira.</description>
                            <adapter>
                                <prefix>jira</prefix>
                                <name>connector-${connector.type}-add-issue-sink</name>
                                <version>${connector.kamelets.version}</version>
                            </adapter>
                            <kafka>
                                <prefix>kafka</prefix>
                                <name>connector-kafka-source</name>
                                <version>${connector.kamelets.version}</version>
                            </kafka>
                        </connector>
                    </connectors>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!--This is auto generate, do not change it-->
        <profile>
            <id>kamelets-deps</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.apache.camel.quarkus</groupId>
                    <artifactId>camel-quarkus-core</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.apache.camel.quarkus</groupId>
                    <artifactId>camel-quarkus-jackson</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.apache.camel.quarkus</groupId>
                    <artifactId>camel-quarkus-jira</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.apache.camel.quarkus</groupId>
                    <artifactId>camel-quarkus-kafka</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.apache.camel.quarkus</groupId>
                    <artifactId>camel-quarkus-kamelet</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

</project>
